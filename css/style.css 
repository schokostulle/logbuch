========================================= */

/* Kleine Bildschirme: Nur Icons anzeigen */
@media (max-width: 800px) {
  #nav {
    width: 50px;             /* schmaler Menübereich */
  }

  .nav .brand {
    font-size: 0;            /* Text ausblenden */
    padding: 12px 0;
  }

  .nav .brand::before {
    content: "⚓";            /* nur Symbol bleibt sichtbar */
    font-size: 20px;
  }

  .nav a .label {
    display: none;           /* nur Icons */
  }

  #kopf {
    left: 50px;
  }

  #content {
    margin-left: 50px;
    width: calc(100% - 50px);
  }
}